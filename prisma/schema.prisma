generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NonceTable {
  address String @id
  nonce   String
}

model Query {
  id               Int     @id @default(autoincrement())
  title            String
  description      String
  telegramUsername String
  resolved         Boolean @default(false)
  ownerAddress     String
  mapCoordX        Int?
  mapCoordY        Int?
  mapFloor         Int?
  tags             String?
}

model Mentor {
  id               Int    @id @default(autoincrement())
  name             String
  description      String
  telegramUsername String
  address          String
}

model Map {
  floor Int    @id
  image String
}
